extends layout
append vars
  - nestLevel = '../../'
  - pgTitle = organization + ' | Blue Button Connector '

block content
  include ../includes/_topnav
  //- .minimal-back-nav
  //-   h6.fs-xsmall.fg-dblue: a(href='../records') &larr; back to provider list
  .container
    h2.page-title #{organization}

    .row

      .col-sm-7.col-sm-push-5.col-xs-12
        h3.sub-title Features

        ul.feature-list.list-unstyled
          //- li.clearfix
          //-   - if (bb_logo)
          //-     i.fa.fa-check-square-dark.isize-48.pull-left
          //-       em organization
          //-   - else
          //-     i.fa.fa-uncheck-square.isize-48.pull-left
          //-       em organization doesn't
          //-   h6.feature-title Displays Blue Button Logo on website
          li.clearfix
            - if (bbview)
              i.fa.fa-check-square-dark.isize-48.pull-left
                em you can
            - else
              i.fa.fa-uncheck-square.isize-48.pull-left
                em you can't
            h6.feature-title View your records online
          li.clearfix
            - if (bbdownload)
              i.fa.fa-check-square-dark.isize-48.pull-left
                em you can
            - else
              i.fa.fa-uncheck-square.isize-48.pull-left
                em you can't
            h6.feature-title Download your records
          li.clearfix
            - if (bbtransmit)
              i.fa.fa-check-square-dark.isize-48.pull-left
                em you can
            - else
              i.fa.fa-uncheck-square.isize-48.pull-left
                em you can't
            h6.feature-title Securely send your records to your preferred application

        hr.visible-xs-block

      .col-sm-5.col-sm-pull-7.col-xs-12.pt-5
        a.get-records-wrapper-link(href=(url || '#') target='_blank')
          //- p.fg-daqua #{bburl}
          p.fg-daqua login to #{organization}
          //- we're about to add over 1000 listings that we don't have websites for, other than the "FollowMyHealth" EHR they use, so gonna hack in a check
          //- in the name of efficiency over cleanliness
          - if (/followmyhealth/.test(url))
            img.img-thumbnail.img-responsive.profile-img(src=nestLevel+'img/organizations/followmyhealth.png')
          - else
            img.img-thumbnail.img-responsive.profile-img(src=nestLevel+'img/organizations/' + id + '.png')
          .get-records-prep
            h6.go-get-em-header.fg-maqua.text-center get your health records
            img.arrow-up.hidden-xs(src=nestLevel+'img/arrow-up.png')

        - if (description)
          h6.provider-about-header.fs-xsmall.fw-strong.fg-dgrey About #{organization}
          p.provider-description= description
        if (people_reached)
          p.provider-description.people-reached
            strong= people_reached.toString().replace(/\B(?=(\d{3})+(?!\d))/g, ",")
            |  people can access their data from #{organization}.
        //- p.fg-mgrey This profile was last updated on #{updated}.

    .row
      .col-xs-12
        hr.hairline
        p.mt-25.fg-mgrey Is information on this page incorrect? You can help by <a class='fg-maqua fw-strong' href='/update-organization?id=#{id}'>suggesting corrections and updates</a>.
