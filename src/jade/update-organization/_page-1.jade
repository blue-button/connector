    {{#_unitedStates}}
    .checkbox
      label
        input(type='checkbox' name='{{states}}' value='{{data}}')
        | {{.label}}
    {{/_unitedStates}}

.form-group
  label.control-label.col-sm-4 Check all the services that are available to the customers/patients
  .col-sm-8
    .checkbox
      label
        input(type='checkbox' checked='{{view}}')
        | View records online
    .checkbox
      label
        input(type='checkbox' checked='{{download}}')
        | Download records
    .checkbox
      label
        input(type='checkbox' checked='{{transmit}}')
        | Securely transmit records to other apps
