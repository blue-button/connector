.isize-36
  width 36px
  height 36px

.isize-48
  width 48px
  height 48px

.isize-96
  width 96px
  height 96px

.centered-row
  text-align center
  [class*='col-']
    vertical-align top
    float none
    display inline-block


.section.why-bb
  @extend .bg-maqua
  @extend .fg-white

  .why-share, .why-secure
    .wrap-icon
      @extend .bg-lblue
  .why-check
    .wrap-icon
      @extend .bg-mblue
  .why-recall
    .wrap-icon
      @extend .bg-daqua

  h5
    fs 1.1em

.flex-video
  position relative
  pt 0
  pb 67.5%
  height 0
  mb 16px
  overflow hidden
  iframe, object, embed
    position absolute
    top 0
    left 0
    width 100%
    height 100%
  &.vimeo
    pt 0
  &.widescreen
    pb 57.25%

// @media only screen and (max-device-width: 800px), only screen and (device-width: 1024px) and (device-height: 600px), only screen and (width: 1280px) and (orientation: landscape), only screen and (device-width: 800px), only screen and (max-width: 767px)
//   .flex-video
//     pt 0

.vid-still
  position relative

@media screen and (min-width: 768px) and (max-width: 991px)
  #vid-modal
    .modal-dialog
      width 700px

@media screen and (min-width: 992px)
  #vid-modal
    .modal-dialog
      width 800px

  h2.big-header, .lead
    color $maqua
  .img-subtext
    color $dgrey

.section.what-do
  bgc #fff
  pb 50px

.step-num
  fw bold
  fs 28px


.section.testimonials
  bgc $mblue
  color #fff
  @media(max-width:767px)
    pb 80px
  .img-container
    text-align left
    overflow hidden
    padding 0 3px
    margin 4px 0
    position relative
    height 200px
    @media(max-width:767px)
      margin 10px 0 18px
    img
      width 100%
      min-height 200px
    .caption-wrapper
      position absolute
      bottom 0px
      left 0px
      padding 0px 3px
      width 100%
      .caption
        padding 6px
        margin 0
        bgc rgba(0,0,0,0.6)
        color #fff
        width 100%

.img-subtext
  fw normal
  lh 1.2em
  ta center
  fs 1.5em

.load-profile
  min-height 400px

.fake-checkbox
  // display block
  color $mgrey
  mr 10px

  &:before
    fs 2.5em
    line-height 1.4em
    font-family FontAwesome
    content '\f096'

  &.checked
    color $dgrey
    &:before
      content '\f046'

  em
    display none

// .feature-title
//   mt -10px

.box-link-rapper
  display block
  mb 30px
  padding 5px
  text-decoration none
  height 150px
  bgc $maqua
  color #fff
  &:hover, li.active &
    color #fff
    text-decoration none
    bgc $daqua
  i
    display inline-block !important
    fs 48px
    pt 8px
  .insurance-icon
    pt 0
  .start-here
    mt 2px

  @media screen and (max-width: 767px)
    text-align left
    pl 65px
    mb 10px
    height auto
    i
      fs 36px
      position absolute
      left 22px
      top 4px
      &.insurance-icon
        top 20px
    h3
      mt 10px

.use-records-description
  color $maqua
  border-bottom none
  pb 8px

.app-disclaimer
  margin 40px 0

.app-rapper
  mb 40px
  .app-icon
    width 128px
    height 128px

.nav-pills>li
  >a
    border-radius 0
    color $dgrey
    fs 18px
  &.active>a
    bgc $maqua
    &:hover, &:focus
      bgc $maqua

#select-provider-wrapper
  min-height 250px

.providers
  padding 20px 10px
  border-top solid 5px $maqua

.provider-list
  pr 0px
  height 290px
  overflow-y auto
  &.nav-pills>li>a
    fs 16px
    line-height 1.3em
    &.highlight
      bgc #ccc

.provider-search-wrapper
  mb 18px
  mt 5px


.no-data
  mt 0px
  pl 20px
  border-left solid 1px $mgrey
  @media screen and (max-width: 767px)
    border-left none
    pl 0px
    mt 15px
    border-top solid 1px $dgrey

.view-profile-btn
  text-decoration underline

.get-data-btn
  fs 18px

.or
  padding 0 15px

.not-listed-learn-more
  text-decoration underline

.get-records-wrapper-link
  pr 40px
  display inline-block

.provider-about-header, .provider-description
  pr 20px

ul.additional-features-list
  mt 10px
  ml 18px

  li
    line-height 1.5em

.get-records-prep
  @extend .fg-maqua
  position relative
  mt 0
  mb 25px
  img.arrow-up
    position absolute
    top -60px
    right -25px
    z-index 1000
  p
    fs 18px

.go-get-em-header
  fs 18px
  text-transform uppercase
  pt 0
  pb 0

  @media screen and (min-width: 768px) and (max-width: 991px)
    fs 14px



.ask-participate
  mb 40px
  mt 40px
  border-top solid 1px $lgrey

.offerings
  @extend .bg-maqua
  @extend .fg-white
  @extend .clearfix
  padding 0 15px 15px
  margin-left -15px
  margin-right -15px
  ul>li
    fs 16px
    pb 7px

.partners-lists-container
  mb 35px

.app-coming-soon
  fs 5em

.app-description
  max-width 220px
  mr auto
  ml auto

.privacy-last-section
  pb 60px

.profile-img
  width 400px

.section.footer
  pt 20px
  pb 20px
  bgc $lgrey
  p
    mt 8px
    pl 5px
    line-height 1.4em

.footer-links > li
  pb 10px
