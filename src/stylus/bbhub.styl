  background-image: url("data:image/svg+xml;base64,"), none;

.fa-check-square-dark
  background-image: url("data:image/svg+xml;base64,"), none;

.fa-uncheck-square
  background-image: url("data:image/svg+xml;base64,"), none;

.fa-umbrella
  background-image: url("data:image/svg+xml;base64,"), none;

.fa-medkit
  background-image: url("data:image/svg+xml;base64,"), none;

