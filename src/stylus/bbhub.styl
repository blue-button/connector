// MAIN STYLESHEET
//
@import nib
@import _mixins
@import _color
@import _typography
@import _strokes


// Bootstrap overrides
html, body
  width: auto !important;
  overflow-x: hidden !important;

body.modal-open
  mr 0px

.btn
  border-radius 0
  border none

.btn-large
  fs 36px

.btn-med
  fs 24px

.btn-primary
  @extend .bg-dblue
  @extend .fw-strong
  fs 1.2em

.btn-info
  @extend .bg-laqua
  @extend .fg-daqua
  @extend .fw-strong
  fs 1.2em

.btn-warning
  @extend .bg-dgrey
  @extend .fw-normal
  &:hover
    @extend .bg-mgrey

.alert.alert-slim
  padding 5px
  mb 0

.top-nav
  mt 15px

.minimal-back-nav
  border-bottom solid 2px $dblue
  padding 0 15px

.bb-onc-header
  @extend .bg-dblue
  @extend .fg-white
  position relative
  height 80px
  padding 15px
  img.bb-onc-logo
    position relative
    width 150px
    mr 20px
    vertical-align bottom
  .onc-tagline
    line-height 1em
    fs 1.1em
    mt 0
  .top-nav
    pt 2px
    li
      a
        color #fff
        &:hover
          color $dgrey

.next-btn
  position absolute
  bottom 40px
  left 40px
  fs 18px
  line-height 5px
  i
    fs 2.5em

.next-btn-fixed
  position fixed
  bottom 20px
  left 20px

.readable-width
  max-width 620px

.readable-width-centered
  max-width 620px
  mr auto
  ml auto

.alt-use
  a
    text-decoration underline
    @extend .fg-dblue

.share-blurb
  mt 32px
  pr 0
  p
    line-height 2em
  @media(max-width:767px)
    mt 8px

.share-btn
  ml 10px

.share-icon
  @extend .bg-dgrey
  @extend .fg-white
  height 40px
  width 40px
  border-radius 50%
  display block
  text-align center
  line-height 40px
  font-size 20px
  @media(max-width:767px)
    height 32px
    width 32px
    line-height 32px
    font-size 16px

.main-nav
  border none
  border-bottom solid 6px $dblue
  border-radius none
  padding 18px 0
  background none
  .navbar-header
    pl 0

.navbar
  border-radius none !important

  @media screen and (min-width: 768px)
    border-radius none !important

img.little-logo
  width 56px
  height 56px
  mr 8px
  ml -5px

.force-inline
  @media screen and (min-width: 768px)
    display inline !important

.bb-logotype
  mt 10px
  fs 1.5em
  font-weight bold !important
  color $dblue !important

.section
  padding 80px 0 80px 0
  position relative
  @media(max-width:767px)
    pt 30px
    pb 30px

body
  @extend .bg-white

.splash-section
  height 550px
  pt 0px
  background-color #fff
  .splash-img-wrapper
    height 280px
    position relative
    background-color #3c9ed2
    image '../img/splash-bg-prog.jpg' 385px 262px
    background-repeat no-repeat
    background-position bottom center

  .splash-title
    mt 0px
    h1
      @extend .bg-white
      @extend .fg-dblue
      padding 35px 0 15px
      margin 0 0 12px 0

  .btn-primary
    @extend .bg-dblue
    fs 32px


.wrap-outer-icon
  .wrap-icon
    height 140px
    width 140px
    margin auto
    pt 22px
    border-radius 100px
    border solid 5px #fff

.circ-col
  padding 40px 42px 10px

.big-icon
  fs 600%
  padding 10px

.fa
  display inline-block
  background-repeat no-repeat
  background-position center center
  background-size 100% 100%

